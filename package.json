{
  "name": "@cardplay/core",
  "version": "0.1.0",
  "description": "Core type system for Cardplay - parametric music creation",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./events": {
      "import": "./dist/events/index.js",
      "types": "./dist/events/index.d.ts"
    },
    "./wasm": {
      "import": "./dist/wasm/index.js",
      "types": "./dist/wasm/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "typecheck": "tsc --noEmit",
    "typecheck:all": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:canon": "vitest run src/tests/canon/",
    "test:ai:bench": "vitest run src/ai/engine/prolog-adapter.bench.test.ts src/ai/engine/performance-regression.test.ts src/ai/engine/kb-memory-profiler.test.ts src/ai/engine/lifecycle-perf.test.ts src/ai/queries/workflow-planning.bench.test.ts src/ai/queries/project-analysis.bench.test.ts",
    "lint": "eslint src --ext ts",
    "clean": "rm -rf dist",
    "canon:check": "npx ts-node scripts/canon/check.ts",
    "canon:check-ports": "npx ts-node scripts/canon/check-port-vocabulary.ts",
    "canon:check-modules": "npx ts-node scripts/canon/check-module-map.ts",
    "canon:check-aliases": "npx ts-node scripts/canon/check-legacy-type-aliases.ts",
    "canon:check-ontology-mixing": "npx tsx scripts/canon/check-ontology-mixing.ts",
    "canon:check-prolog-predicates": "npx tsx scripts/canon/check-prolog-predicates.ts",
    "docs:lint": "npm run canon:check && npm run canon:check-ports && npm run canon:check-modules && npm run canon:check-aliases && npm run canon:check-ontology-mixing && npm run canon:check-prolog-predicates",
    "docs:sync-aliases": "npx tsx scripts/update-legacy-aliases-doc.ts",
    "docs:sync-modules": "npx tsx scripts/update-module-map.ts",
    "docs:sync-ids": "npx tsx scripts/update-ids-doc.ts",
    "docs:sync-card-systems": "npx tsx scripts/update-card-systems-doc.ts",
    "docs:sync-deck-systems": "npx tsx scripts/update-deck-systems-doc.ts",
    "docs:sync-stack-systems": "npx tsx scripts/update-stack-systems-doc.ts",
    "docs:sync-all": "npm run docs:sync-aliases && npm run docs:sync-modules && npm run docs:sync-ids && npm run docs:sync-card-systems && npm run docs:sync-deck-systems && npm run docs:sync-stack-systems && npm run docs:implementation-status",
    "docs:implementation-status": "npx tsx scripts/generate-implementation-status.ts",
    "registry:report": "npx tsx scripts/registry-report.ts",
    "theme:lint": "npx tsx scripts/theme-visual-only-lint.ts",
    "validate:card-ids": "npx tsx scripts/validate-card-ids.ts",
    "check:deprecation": "npx tsx scripts/check-deprecation-budget.ts",
    "check": "npm run typecheck && npm run lint && npm run test && npm run docs:lint && npm run theme:lint && npm run validate:card-ids && npm run check:deprecation && npm run build"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^1.1.0",
    "canvas": "^3.2.1",
    "eslint": "^9.39.2",
    "fake-indexeddb": "^6.2.5",
    "jsdom": "^27.4.0",
    "puppeteer": "^24.36.1",
    "ts-morph": "^27.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "music",
    "daw",
    "cardplay",
    "parametric",
    "typescript"
  ],
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "lit": "^3.3.2",
    "tau-prolog": "^0.3.4"
  }
}
